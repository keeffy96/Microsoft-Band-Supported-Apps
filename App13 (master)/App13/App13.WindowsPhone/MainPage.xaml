            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <Border BorderBrush="Black" BorderThickness="4" HorizontalAlignment="Left" Height="160" Margin="27,288,0,0" VerticalAlignment="Top" Width="112"/>
        <TextBlock x:Name="textBlock8" FontSize="16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Volume" VerticalAlignment="Top" Margin="50,293,0,0" Height="18" Width="75"/>
        <Border BorderBrush="Black" BorderThickness="1.5" HorizontalAlignment="Left" Height="21" Margin="47,292,0,0" VerticalAlignment="Top" Width="72"/>

        <Button x:Name="button2" Content="Advanced" HorizontalAlignment="Left" Margin="8,493,0,0" VerticalAlignment="Top" Click="button2_Click" Background="Red" Foreground="White" FontFamily="AR DESTINE" BorderBrush="Black" Height="125" Width="120"/>

        <Button x:Name="technoplay" Content="Play" HorizontalAlignment="Left" Margin="153,283,0,0" VerticalAlignment="Top" Click="technoplay_Click" Background="Red" Foreground="White" FontFamily="AR DESTINE" BorderBrush="Black"/>
        <Button x:Name="button3" Content="Waves" HorizontalAlignment="Left" Margin="271,493,0,0" VerticalAlignment="Top" Background="Red" Foreground="White" FontFamily="AR DESTINE" Click="button3_Click" BorderBrush="Black" Height="125" Width="120"/>
        <Button x:Name="technostop" Content="Stop" HorizontalAlignment="Left" Margin="153,345,0,0" VerticalAlignment="Top" Click="technostop_Click" Background="Red" Foreground="White" FontFamily="AR DESTINE" BorderBrush="Black"/>
        <Button x:Name="soundboard" Content="Soundboard" HorizontalAlignment="Left" Margin="137,493,0,0" VerticalAlignment="Top" Background="Red" Foreground="White" FontFamily="AR DESTINE" BorderBrush="Black" Click="soundboard_Click_1" Height="125" Width="125" FontSize="17"/>
       
              
        <MediaElement  x:Name="media" Source="/Assets/TheHills.mp3" AutoPlay="False" HorizontalAlignment="Left" IsLooping="True" Height="141" Margin="72,457,0,0" VerticalAlignment="Top" Width="216" Volume="0" />

        <Slider x:Name="volumeSlider"  Background="Silver"  Foreground="Red" HorizontalAlignment="Left" Margin="35.334,348.863,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"  Height="55.163"  ValueChanged="volumeSlider_ValueChanged" >
            <Slider.RenderTransform>
                <CompositeTransform Rotation="-90" ScaleY="1.034" ScaleX="0.968"/>
            </Slider.RenderTransform>
        </Slider>

    </Grid>
</Page>
