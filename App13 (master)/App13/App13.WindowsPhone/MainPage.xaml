<Page
    x:Class="App_v1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_v1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black" >


    <Grid  Margin="0,0.333,0,-0.333" RenderTransformOrigin="0.517,0.497">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF9B0000" Offset="0.176"/>
                <GradientStop Color="#FE8D8D8D" Offset="0.617"/>
                <GradientStop Color="#FE9B0000" Offset="0.822"/>
                <GradientStop Color="#FE8D8D8D" Offset="0.339"/>
            </LinearGradientBrush>
        </Grid.Background>



        <Slider x:Name="slider" Background="Silver"  Foreground="Red"  Margin="10,137.943,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False"  d:LayoutRounding="Auto" Height="55.163" >
            <Slider.RenderTransform>
                <CompositeTransform Rotation="-90" ScaleY="1.034" ScaleX="0.968"/>
            </Slider.RenderTransform>
        </Slider>

        <Slider x:Name="slider1" Background="Silver"  Foreground="Red" HorizontalAlignment="Left" Margin="70,137.943,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Height="55.163">
            <Slider.RenderTransform>
                <CompositeTransform Rotation="-90" ScaleY="1.034" ScaleX="0.968"/>
            </Slider.RenderTransform>
        </Slider>

        <Slider x:Name="slider2" Background="Silver"  Foreground="Red" HorizontalAlignment="Left" Margin="130,137.943,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Height="55.163">
            <Slider.RenderTransform>
                <CompositeTransform Rotation="-90" ScaleY="1.034" ScaleX="0.968"/>
            </Slider.RenderTransform>
        </Slider>

        <Slider x:Name="slider3" Background="Silver"  Foreground="Red" HorizontalAlignment="Left" Margin="225,137.943,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Height="55.163">
            <Slider.RenderTransform>
                <CompositeTransform Rotation="-90" ScaleY="1.034" ScaleX="0.968"/>
            </Slider.RenderTransform>
        </Slider>

        <Slider x:Name="slider4" Background="Silver"  Foreground="Red" HorizontalAlignment="Left" Margin="285,137.943,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Height="55.163">
            <Slider.RenderTransform>
                <CompositeTransform Rotation="-90" ScaleY="1.034" ScaleX="0.968"/>
            </Slider.RenderTransform>
        </Slider>


        <Border BorderBrush="Black" BorderThickness="4" HorizontalAlignment="Right" Height="191" Margin="0,76,188,0" VerticalAlignment="Top" Width="185"/>
        <Border BorderBrush="Black" BorderThickness="4" Height="191" Margin="235,76,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130"/>
        <TextBlock x:Name="textBlock" FontSize="16" HorizontalAlignment="Left" Margin="87,76,0,0"  TextWrapping="Wrap" Text="Amplifier"  VerticalAlignment="Top" Height="18" Width="68"/>
        <Border BorderBrush="Black" BorderThickness="1.5" HorizontalAlignment="Left" Height="20" Margin="85,76,0,0" VerticalAlignment="Top" Width="68"/>
        <Border BorderBrush="Black" BorderThickness="1.5" HorizontalAlignment="Left" Height="20" Margin="265,76,0,0" VerticalAlignment="Top" Width="68"/>
        <TextBlock x:Name="textBlock1" FontSize="16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Filter" VerticalAlignment="Top" Margin="283,76,0,0" Height="18" Width="35"/>
        <TextBlock x:Name="textBlock2" FontSize="16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Freq." VerticalAlignment="Top" Margin="253,215,0,0" Height="18" Width="35"/>
        <TextBlock x:Name="textBlock3" FontSize="16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Res" VerticalAlignment="Top" Margin="319,215,0,0" Height="18" Width="26"/>
        <TextBlock x:Name="textBlock4" FontSize="16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Decay" VerticalAlignment="Top" Margin="35,215,0,0" Height="18" Width="43"/>
        <TextBlock x:Name="textBlock5" FontSize="16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Attack" VerticalAlignment="Top" Margin="94,215,0,0" Height="18" Width="45"/>
        <TextBlock x:Name="textBlock6" FontSize="16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Pitch" VerticalAlignment="Top" Margin="160,215,0,0" Height="18" Width="35"/>
