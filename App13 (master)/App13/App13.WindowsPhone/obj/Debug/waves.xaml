<Page
    x:Class="App_v1.waves"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_v1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid  Margin="0,20.333,0,-20.333" RenderTransformOrigin="0.517,0.497">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF9B0000" Offset="0.176"/>
                <GradientStop Color="#FE8D8D8D" Offset="0.617"/>
                <GradientStop Color="#FE9B0000" Offset="0.822"/>
                <GradientStop Color="#FE8D8D8D" Offset="0.339"/>
            </LinearGradientBrush>
        </Grid.Background>



        <Slider x:ConnectionId='1' x:Name="frequency" Header="Frequency " Margin="43,339,0,0" VerticalAlignment="Top" Width="317" HorizontalAlignment="Left"                                       LargeChange="5" Height="64">
            <Slider.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="Red" Offset="0.521"/>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>

        <TextBlock x:Name="textfrequency" HorizontalAlignment="Left" Margin="159,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="91"/>

        <Button x:ConnectionId='2' x:Name="ButtonSine" Content="Sine" HorizontalAlignment="Left" Margin="43,32,0,0" VerticalAlignment="Top"                          Height="150" Width="150" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFFB0000" Offset="0.504"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='3' x:Name="ButtonTri" Content="Triangle" HorizontalAlignment="Left" Margin="210,190,0,0" VerticalAlignment="Top"                         Height="150" Width="150" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.004"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="Red" Offset="0.492"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='4' x:Name="ButtonSaw" Content="Sawtooth" HorizontalAlignment="Left" Margin="43,190,0,0" VerticalAlignment="Top" Height="150" Width="150"                         Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="Red" Offset="0.487"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='5' x:Name="ButtonSqu" Content="Square" HorizontalAlignment="Left" Margin="210,32,0,0" VerticalAlignment="Top" Height="150" Width="150"                         Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="Red" Offset="0.496"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='6' x:Name="button" Content="Basic" HorizontalAlignment="Left" Margin="43,553,0,0" VerticalAlignment="Top" Background="Red" Foreground="White" FontFamily="AR DESTINE"                     />
        <Button x:ConnectionId='7' x:Name="button1" Content="Advanced" HorizontalAlignment="Left" Margin="251,553,0,0" VerticalAlignment="Top" Background="Red" Foreground="White" FontFamily="AR DESTINE"                      />
        <Slider x:ConnectionId='8' x:Name="volume" Header="Volume" Margin="43,403,0,0" VerticalAlignment="Top" Width="317" HorizontalAlignment="Left" LargeChange="5" Height="64"                                   >
            <Slider.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="Red" Offset="0.521"/>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>
        <TextBlock x:Name="textvolume" HorizontalAlignment="Left" Margin="159,400,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="91"/>
        
        <TextBlock x:Name="xAcc" HorizontalAlignment="Left" Margin="43,475,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="yAcc" HorizontalAlignment="Left" Margin="43,502,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="zAcc" HorizontalAlignment="Left" Margin="43,526,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>


    </Grid>
</Page>

